<Window x:Class="ProduManWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProduManWPF"
        xmlns:vm="clr-namespace:ProduManWPF.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        KeyDown="MainWindow_OnKeyDown"
        Closed="MainWindow_OnClosed"
        >
        <Window.Resources>
                
        </Window.Resources>
        
        <Grid>
                <Rectangle x:Name="rectangle" Fill="CadetBlue" Margin="10,10,10,91" Stroke="Black"/>
                <Slider x:Name="sliderR"  Margin="10,0,10,60" VerticalAlignment="Bottom" Height="22" Maximum="255"
                        ValueChanged="Slider_OnValueChanged"/>
                <Slider x:Name="sliderG" Margin="10,0,10,35" VerticalAlignment="Bottom" Height="22" Maximum="255"
                        ValueChanged="Slider_OnValueChanged" />
                <Slider x:Name="sliderB" Margin="10,0,10,10" VerticalAlignment="Bottom" Height="22" Maximum="255"
                        ValueChanged="Slider_OnValueChanged"/>
        </Grid>
</Window>